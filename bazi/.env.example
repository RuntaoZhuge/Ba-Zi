# ===========================================
# Ba-Zi Application — Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values.
# Never commit .env.local to version control.

# --- Next.js ---
NEXT_PUBLIC_APP_URL=http://localhost:3000

# --- i18n ---
# Default locale: zh | en
NEXT_PUBLIC_DEFAULT_LOCALE=zh

# --- Database (V1 — Neon PostgreSQL) ---
# DATABASE_URL=postgresql://user:password@host:5432/bazi?sslmode=require

# --- Authentication (V1 — Auth.js / NextAuth) ---
# AUTH_SECRET=your-random-secret-here
# AUTH_GOOGLE_ID=your-google-client-id
# AUTH_GOOGLE_SECRET=your-google-client-secret

# --- AI Analysis (V1 — DeepSeek) ---
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com

